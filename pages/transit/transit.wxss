/* pages/transit/transit.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  color: var(--title-color);
  position: relative;
}
.box{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-55%);
  white-space: nowrap;
}
.title{
  margin-bottom: 30px;
}
.question-info>view{
  margin-bottom: 20rpx;
}
.question-box>view{
  margin-bottom: 20rpx;
}
.btn{
  margin-top: 40px;
  width: 100%;
  padding: 15px 0;
  background: var(--bg-center-color);
  text-align: center;
  color:#fff;
  border-radius: 5px;
}