/* pages/caseTopic/caseTopic.wxss */
.top {
  /* margin-bottom: 120rpx; */
  padding: 0 30rpx;
  padding-bottom: 120rpx;
}
button {
  padding: 0 !important;
}
.title {
  position: relative;
  padding: 30rpx 0;
  line-height:50rpx;
  color: var(--title-color);
  font-size: var(--font-size-16);
  margin-bottom: 10rpx;
}
.slide-image{
  width: 100%;
  height: 200px;
  display: block;
}
.radios-group {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.radios-group radio {
  padding: 12px 0;
}
.checkboxs {
  display: flex;
  padding: 12px 0;
}
.checkbox .wx-checkbox-input {  /* 圆角*/
  border-radius: 50%;
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked {  /* 选中圆角*/
  background: #2d8cf0;
  border: 0;
}
.checkbox  .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(0.6);
  -webkit-transform: translate(-50%, -50%) scale(0.6);
}
radio .wx-radio-input.wx-radio-input-checked{
  background: #2d8cf0 !important;
 }
/* 解析 */
.topicTop {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}
.topicTop .topicNum {
  font-size: var(--font-size-16);
  color: var(--c1);
  margin-right: 30rpx;
}
.parsing .tag {
  width: 210rpx;
  padding: 15rpx 20rpx;
  border-radius: 6px;
  font-size: var(--font-size-16);
  color: #fff;
  display: flex;
  align-items: center;
}
.tag1 {
  background: var(--tips-color);
}
.tag2 {
  background: var(--bg-center-color);
}
.tag image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 24rpx;
}
.answer view {
  margin-bottom: 24rpx;
  font-size: var(--font-size-16);
  color: var(--c1);
}
.true text,
.bottom-true text,
.false .color-true {
  color: var(--bg-center-color);
}
.false text,
.bottom-false text {
  color: var(--tips-color);
}
/* 分页样式 */
.bottom-pages {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  background: #fff;
  z-index: 9999;
}
.bottom-pages image {
  width: 36rpx;
  height: 36rpx;
}
.bottom-content {
  display: flex;
  flex: 1;
  /* justify-content: space-evenly; */
  justify-content: center;
}
.bottom-content .img {
  display: flex;
  align-items: center;
}
.bottom-content text {
  margin-left: 10rpx;
}
.bottom-pages button {
  font-size: var(--font-size-13);
  color: var(--c1);
  padding:  0;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
}
button:not([size='mini']) {
  width: 190rpx !important;
}  
/* 题目列表 */
.content {
  position: relative;
}
.content .title2 { 
  padding-bottom: 0;
}
.comfirm {
  width: 50%;
  margin: 60rpx auto 0 auto;
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  color: #fff;
  background: var(--bg-center-color);
  font-size: var(--font-size-16);
}