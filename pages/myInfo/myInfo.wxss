/* pages/myInfo/myInfo.wxss */
page {
  background: #EBEBEB;
}
.list {
  background: #fff;
  /* padding: 0 15px; */
}
.items{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx;
  position: relative;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  height: 100rpx;
  position: relative;
}
.item .left text{
  font-size: 14px;
  color: #000;
}
.items .header {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.items .right image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: block;
}
.item right {
  width: 80%;
}
.item input {
  color: #666;
  width: 100%;
  text-align: right;
  font-size: 14px;
}
/* 按钮 */
.button {
  width: 90%;
  margin: 0 auto;
  margin-top: 30px;
}
.button .confirm {
  background: var(--bg-center-color);
  color: #fff;
}
button:not([size='mini']) {
  width: auto !important;
}