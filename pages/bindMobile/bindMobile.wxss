/* pages/register/register.wxss */
.container{
  display: flex;
  flex-direction: column;
}
.nav {
  width: 100%;
  overflow: hidden;
  position:relative;
}
.title1 {
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0; 
  left: 0;
  z-index: 10;
  font-size: var(--font-size-18);
}
.login-title{
  background: #366BA1;
  color: #fff;
  font-weight: bold;
  padding: 30px;
}
.tip{
  font-size: var(--font-size-20);
  margin-bottom: 5px;
}
.tips{
  font-size: var(--font-size-20);
  text-align: right;
}
.box{
  flex: 1;
  /* position: relative; */
}
.login-box{
  width: 80%;
  margin: 100rpx auto 0 auto;
}
.item{
  display: flex;
  border-radius: 5px;
  border: 1rpx solid #999;
  align-items: center;
  margin-bottom: 15px;
  padding: 0 0 0 15px;
}
.item-left{
  width: 15px;
  padding-right: 10px;
  margin-right: 10px;
  position: relative;
}
.item-left image{
  width: 100%;
  height: 0;
  display: block;
}
.item-right{
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-right image{
  width: 15px;
  height: 0;
  display: block;
}
.item-left::after{
  content: "";
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 1px;
  background: #999;
}
.item-center{
  flex: 1;
}
.item-center input{
  height: 50px;
}
.verify-code{
  font-size: 28rpx;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background: var(--bg-center-color);
  margin-right: 30rpx;
}
.back-color{
  background: #e5e5e5;
}
.btn{
  margin-top: 30px;
  width: 80%;
  margin-left: 10%;
  padding: 15px 0;
  background: var(--bg-center-color);
  color: #fff;
  text-align: center;
  border-radius: 10px;
}