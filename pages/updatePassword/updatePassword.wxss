/* pages/sets/updatePassword/updatePassword.wxss */
page {
  background: #ecf3fd;
}
.contain {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 10px;
}
.title {
  height: 50px;
  line-height: 50px;
  padding: 0 10px;
  border-radius: 2px;
  color: #666;
  font-size: 14px
}
.title text {
  color: #1680e2;
  padding-left: 2px;
}
.subscribe {
  padding: 0 10px;
  margin-bottom: 20px;
  color: #999;
  font-size: 12px;
}
.content {
  margin: 10px 0;
  background: #fff;
  border-radius: 2px;
  -webkit-box-shadow: 0 0 3px rgba(0,0,0,0.05);
  box-shadow: 0 0 3px rgba(0,0,0,0.05);
  padding:10px;
}
.item {
  position:relative;
  display: flex;
  align-items: center;
  font-size: 14px;
  height: 60px;
}
.item>text {
  flex: 0 0 60px;
}
.item input {
  flex: 1;
  height: 100%;
}
.btn {
  margin: 20px 0px 10px 0px;
  background: var(--bg-center-color);
  color: #fff;
  border-radius: 10px;
  padding: 10px 0;
  text-align: center;  
}
.verify-code{
  font-size: 28rpx;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background: var(--bg-center-color);
}
.back-color{
  background: #e5e5e5;
}
.right{
  width: 40px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.right image{
  width: 15px;
  height: 0;
  display: block;
}